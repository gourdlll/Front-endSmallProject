<!--pages/index2/index2.wxml-->

<view bindtap="btn" class="btn">弹窗</view>

<!-- 遮罩层 -->
<view class="mask" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
<!-- 弹出层 -->
<view class="modal" wx:if="{{showModal}}">
  <view class="modalDialog">
    <view class="txt">
      <text>微信授权</text>
      <text class="txt1">申请获取以下权限:</text>
      <text class="txt2">· 获得你的公开信息（昵称、头像等）</text>
    </view>
    <view class="authorize_btn">
      <button class='authorize' type='primary' open-type="getUserInfo" lang="zh_CN" bindtap="bindGetUserInfo">授权登录</button>
    </view>
  </view>
</view>